.info {
  margin: 0 auto;
  margin-bottom: 10rpx;
  padding: 0 30rpx;
  box-sizing: border-box;
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 520rpx;
  height: 100rpx;
  border: 1px solid #BBBBBB;
  border-radius: 20rpx;
}

page,
.my-userinfo {
  height: 100%;
  background-color: #f4f4f4;
}
page .top-box,
.my-userinfo .top-box {
  margin-top: 50rpx;
  height: 400rpx;
  background-color: antiquewhite;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
}
page .top-box .avatar,
.my-userinfo .top-box .avatar {
  margin-bottom: 20rpx;
  height: 90px;
  width: 90px;
  border-radius: 50%;
  background-color: skyblue;
}

